<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="editTextStyle">@style/Widget.AppCompat.EditText</item>

    </style>
    <style name="AppTheme.Widget"/>
    <style name="AppTheme.Widget.TextView" parent="android:Widget.TextView">
        <item name="fontPath">fonts/JosefinSans-Regular.ttf</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>


    <style name="button_style" parent="Widget.AppCompat.Button">

        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_rectangle_button</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>


    <style name="button_style_previous" parent="Widget.AppCompat.Button">

        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_rectangle_button_previous</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>
    <style name="button_style_next" parent="Widget.AppCompat.Button">

        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>

    <style name="ButtonBorder" parent="Widget.AppCompat.Button.Colored" />

    <style name="ButtonBorder.Primary">
        <item name="android:background">@color/colorAccentGreen</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>