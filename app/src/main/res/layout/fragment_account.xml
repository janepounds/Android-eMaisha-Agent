<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.bottomnavbar.AccountFragment">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="?actionBarSize">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="?actionBarSize">

          <LinearLayout
              android:id="@+id/layout1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center"
              app:layout_constraintTop_toTopOf="parent"
              android:background="@android:color/white">

              <ImageView
                  android:id="@+id/user_img"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/dimen_20dp"
                  android:src="@drawable/user"
                  android:contentDescription="@string/user_image_placeholder" />
              <TextView
                  android:id="@+id/user_name_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/default_user_name"
                  android:textSize="20sp"
                  android:textStyle="bold"/>
              <TextView
                  android:id="@+id/user_phone_number_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/default_user_phone_number"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:textColor="@color/colorPrimary"
                  android:layout_marginTop="@dimen/dimen_10dp"/>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_margin="@dimen/dimen_20dp"
                  android:background="@drawable/rounded_rectangle_button"
                  android:padding="@dimen/dimen_10dp">
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="@dimen/dimen_10dp"
                      android:src="@drawable/location_1"
                      android:layout_marginLeft="@dimen/dimen_10dp" />
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginStart="@dimen/dimen_20dp"
                      android:layout_marginLeft="@dimen/dimen_20dp">
                      <TextView
                          android:id="@+id/default_user_location1_tv"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:text="@string/default_user_location1"
                          android:textColor="@android:color/white"
                          android:textSize="15sp"/>
                      <TextView
                          android:id="@+id/default_user_location2_tv"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:text="@string/default_user_location2"
                          android:textColor="@android:color/white"
                          android:textSize="15sp"/>
                  </LinearLayout>


              </LinearLayout>

          </LinearLayout>
          <androidx.cardview.widget.CardView
              android:id="@+id/layout2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dimen_10dp"
              app:layout_constraintTop_toBottomOf="@id/layout1">

              <LinearLayout
                  android:id="@+id/layout_statement_card"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

                  <RelativeLayout
                      android:id="@+id/layout_my_addresses"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/white"
                      android:orientation="horizontal"
                      android:padding="5dp">

                      <ImageView
                          android:id="@+id/pin_icon"
                          android:layout_width="17.07dp"
                          android:layout_height="20.27dp"
                          android:layout_gravity="center|start"
                          android:layout_margin="@dimen/dimen_10dp"
                          android:src="@drawable/pin" />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_toEndOf="@id/pin_icon"
                          android:ellipsize="end"
                          android:fontFamily="@font/josefin_sans"
                          android:maxLines="1"
                          android:paddingStart="@dimen/dimen_10dp"
                          android:paddingEnd="@dimen/dimen_10dp"
                          android:text="@string/delivery_addresses"
                          android:textSize="16sp" />

                  </RelativeLayout>

                  <RelativeLayout
                      android:id="@+id/layout_my_orders"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/white"
                      android:orientation="horizontal"
                      android:padding="5dp">

                      <ImageView
                          android:id="@+id/about_icon"
                          android:layout_width="17.07dp"
                          android:layout_height="20.27dp"
                          android:layout_gravity="center|start"
                          android:layout_margin="@dimen/dimen_10dp"
                          android:src="@drawable/about" />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_toEndOf="@id/about_icon"
                          android:ellipsize="end"
                          android:fontFamily="@font/josefin_sans"
                          android:maxLines="1"
                          android:paddingStart="@dimen/dimen_10dp"
                          android:paddingEnd="@dimen/dimen_10dp"
                           android:text="@string/my_orders"
                          android:textSize="16sp" />

                  </RelativeLayout>

                  <RelativeLayout
                      android:id="@+id/layout_my_cart"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/white"
                      android:orientation="horizontal"
                      android:padding="5dp">

                      <ImageView
                          android:id="@+id/cart_icon"
                          android:layout_width="17.07dp"
                          android:layout_height="20.27dp"
                          android:layout_gravity="center|start"
                          android:layout_margin="@dimen/dimen_10dp"
                          android:src="@drawable/cart"
                          app:tint="@color/colorPrimary" />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_toEndOf="@id/cart_icon"
                          android:ellipsize="end"
                          android:fontFamily="@font/josefin_sans"
                          android:maxLines="1"
                          android:paddingStart="@dimen/dimen_10dp"
                          android:paddingEnd="@dimen/dimen_10dp"
                           android:text="@string/my_cart"
                          android:textSize="16sp" />

                  </RelativeLayout>

                  <RelativeLayout
                      android:id="@+id/layout_favourites"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/white"
                      android:orientation="horizontal"
                      android:padding="5dp">

                      <ImageView
                          android:id="@+id/favourite_icon"
                          android:layout_width="17.07dp"
                          android:layout_height="20.27dp"
                          android:layout_gravity="center|start"
                          android:layout_margin="@dimen/dimen_10dp"
                          android:src="@drawable/pin" />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_toEndOf="@id/favourite_icon"
                          android:ellipsize="end"
                          android:fontFamily="@font/josefin_sans"
                          android:maxLines="1"
                          android:paddingStart="@dimen/dimen_10dp"
                          android:paddingEnd="@dimen/dimen_10dp"
                          android:text="@string/my_favorites"
                          android:textSize="16sp" />

                  </RelativeLayout>

                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/white"
                      android:orientation="horizontal"
                      android:padding="5dp">

                      <ImageView
                          android:id="@+id/rate_icon"
                          android:layout_width="17.07dp"
                          android:layout_height="20.27dp"
                          android:layout_gravity="center|start"
                          android:layout_margin="@dimen/dimen_10dp"
                          android:src="@drawable/rate" />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_toEndOf="@id/rate_icon"
                          android:ellipsize="end"
                          android:fontFamily="@font/josefin_sans"
                          android:maxLines="1"
                          android:paddingStart="@dimen/dimen_10dp"
                          android:paddingEnd="@dimen/dimen_10dp"
                          android:text="@string/my_rating_reviews"
                          android:textSize="16sp" />

                  </RelativeLayout>

              </LinearLayout>

          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
              android:id="@+id/layout3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dimen_10dp"
              app:layout_constraintTop_toBottomOf="@id/layout2">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

                  <RelativeLayout
                      android:id="@+id/layout_change_password"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/white"
                      android:orientation="horizontal"
                      android:padding="5dp">

                      <ImageView
                          android:id="@+id/password_icon"
                          android:layout_width="17.07dp"
                          android:layout_height="20.27dp"
                          android:layout_gravity="center|start"
                          android:layout_margin="@dimen/dimen_10dp"
                          android:src="@drawable/surface1" />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_toEndOf="@id/password_icon"
                          android:ellipsize="end"
                          android:fontFamily="@font/josefin_sans"
                          android:maxLines="1"
                          android:paddingStart="@dimen/dimen_10dp"
                          android:paddingEnd="@dimen/dimen_10dp"
                          android:text="@string/change_password"
                          android:textSize="16sp" />

                  </RelativeLayout>

                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/white"
                      android:orientation="horizontal"
                      android:padding="5dp">

                      <ImageView
                          android:id="@+id/support_icon"
                          android:layout_width="17.07dp"
                          android:layout_height="20.27dp"
                          android:layout_gravity="center|start"
                          android:layout_margin="@dimen/dimen_10dp"
                          android:src="@drawable/support" />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_toEndOf="@id/support_icon"
                          android:ellipsize="end"
                          android:fontFamily="@font/josefin_sans"
                          android:maxLines="1"
                          android:paddingStart="@dimen/dimen_10dp"
                          android:paddingEnd="@dimen/dimen_10dp"
                          android:text="@string/customer_support"
                          android:textSize="16sp" />

                  </RelativeLayout>

                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/white"
                      android:orientation="horizontal"
                      android:padding="5dp">

                      <ImageView
                          android:id="@+id/website_icon"
                          android:layout_width="17.07dp"
                          android:layout_height="20.27dp"
                          android:layout_gravity="center|start"
                          android:layout_margin="@dimen/dimen_10dp"
                          android:src="@drawable/internet" />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_toEndOf="@id/website_icon"
                          android:ellipsize="end"
                          android:fontFamily="@font/josefin_sans"
                          android:maxLines="1"
                          android:paddingStart="@dimen/dimen_10dp"
                          android:paddingEnd="@dimen/dimen_10dp"
                          android:text="@string/official_website"
                          android:textSize="16sp" />

                  </RelativeLayout>

                  <RelativeLayout
                      android:id="@+id/layout_privacy_policy"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/white"
                      android:orientation="horizontal"
                      android:padding="5dp">

                      <ImageView
                          android:id="@+id/privacy_icon"
                          android:layout_width="17.07dp"
                          android:layout_height="20.27dp"
                          android:layout_gravity="center|start"
                          android:layout_margin="@dimen/dimen_10dp"
                          android:src="@drawable/contract" />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_toEndOf="@id/privacy_icon"
                          android:ellipsize="end"
                          android:fontFamily="@font/josefin_sans"
                          android:maxLines="1"
                          android:paddingStart="@dimen/dimen_10dp"
                          android:paddingEnd="@dimen/dimen_10dp"
                          android:text="@string/privacy_policy"
                          android:textSize="16sp" />

                  </RelativeLayout>

                  <RelativeLayout
                      android:id="@+id/layout_refund_policy"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/white"
                      android:orientation="horizontal"
                      android:padding="5dp">

                      <ImageView
                          android:id="@+id/refund_icon"
                          android:layout_width="17.07dp"
                          android:layout_height="20.27dp"
                          android:layout_gravity="center|start"
                          android:layout_margin="@dimen/dimen_10dp"
                          android:src="@drawable/refund" />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_toEndOf="@id/refund_icon"
                          android:ellipsize="end"
                          android:fontFamily="@font/josefin_sans"
                          android:maxLines="1"
                          android:paddingStart="@dimen/dimen_10dp"
                          android:paddingEnd="@dimen/dimen_10dp"
                          android:text="@string/refund_policy"
                          android:textSize="16sp" />

                  </RelativeLayout>

              </LinearLayout>

          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
              android:id="@+id/layout4"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dimen_10dp"
              android:layout_marginBottom="@dimen/dimen_10dp"
              app:layout_constraintTop_toBottomOf="@id/layout3">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">


                  <RelativeLayout
                      android:id="@+id/layout_share_app"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/white"
                      android:orientation="horizontal"
                      android:padding="5dp">

                      <ImageView
                          android:id="@+id/share_icon"
                          android:layout_width="17.07dp"
                          android:layout_height="20.27dp"
                          android:layout_gravity="center|start"
                          android:layout_margin="@dimen/dimen_10dp"
                          android:src="@drawable/share" />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_toEndOf="@id/share_icon"
                          android:ellipsize="end"
                          android:fontFamily="@font/josefin_sans"
                          android:maxLines="1"
                          android:paddingStart="@dimen/dimen_10dp"
                          android:paddingEnd="@dimen/dimen_10dp"
                          android:text="@string/share_app"
                          android:textSize="16sp" />

                  </RelativeLayout>


                  <RelativeLayout
                      android:id="@+id/layout_news"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/white"
                      android:orientation="horizontal"
                      android:padding="5dp">


                      <ImageView
                          android:id="@+id/news_icon"
                          android:layout_width="17.07dp"
                          android:layout_height="20.27dp"
                          android:layout_gravity="center|start"
                          android:layout_margin="@dimen/dimen_10dp"
                          android:src="@drawable/news" />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_toEndOf="@id/news_icon"
                          android:ellipsize="end"
                          android:fontFamily="@font/josefin_sans"
                          android:maxLines="1"
                          android:paddingStart="@dimen/dimen_10dp"
                          android:paddingEnd="@dimen/dimen_10dp"
                          android:text="@string/news"
                          android:textSize="16sp" />

                  </RelativeLayout>

                  <RelativeLayout
                      android:id="@+id/layout_rate_my_app"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/white"
                      android:orientation="horizontal"
                      android:padding="5dp">

                      <ImageView
                          android:id="@+id/rate_app_icon"
                          android:layout_width="17.07dp"
                          android:layout_height="20.27dp"
                          android:layout_gravity="center|start"
                          android:layout_margin="@dimen/dimen_10dp"
                          android:src="@drawable/rate" />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_toEndOf="@id/rate_app_icon"
                          android:ellipsize="end"
                          android:fontFamily="@font/josefin_sans"
                          android:maxLines="1"
                          android:paddingStart="@dimen/dimen_10dp"
                          android:paddingEnd="@dimen/dimen_10dp"
                          android:text="@string/rate_app"
                          android:textSize="16sp" />

                  </RelativeLayout>

                  <RelativeLayout
                      android:id="@+id/layout_logout"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/white"
                      android:orientation="horizontal"
                      android:padding="5dp">

                      <ImageView
                          android:id="@+id/logout_icon"
                          android:layout_width="17.07dp"
                          android:layout_height="20.27dp"
                          android:layout_gravity="center|start"
                          android:layout_margin="@dimen/dimen_10dp"
                          android:src="@drawable/logout" />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_toEndOf="@id/logout_icon"
                          android:ellipsize="end"
                          android:fontFamily="@font/josefin_sans"
                          android:maxLines="1"
                          android:paddingStart="@dimen/dimen_10dp"
                          android:paddingEnd="@dimen/dimen_10dp"
                          android:text="@string/logout"
                          android:textSize="16sp" />

                  </RelativeLayout>

              </LinearLayout>

          </androidx.cardview.widget.CardView>

      </androidx.constraintlayout.widget.ConstraintLayout>

  </ScrollView>

</layout>